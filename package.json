{
  "name": "@cenk1cenk2/eslint-config",
  "version": "0.0.0-development",
  "description": "Eslint configuration for my taste.",
  "main": "index.js",
  "repository": "https://github.com/cenk1cenk2/eslint-config",
  "author": "Cenk Kilic",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --loglevel warn --write ./*.js && eslint --ext .ts,.js,.tsx,.jsx --fix ./",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx ./"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "@nuxtjs/eslint-config": ">= 7",
    "@nuxtjs/eslint-config-typescript": ">= 7",
    "eslint": ">= 8",
    "eslint-config-react": ">= 1",
    "eslint-plugin-react-hooks": ">= 4"
  },
  "peerDependenciesMeta": {
    "@nuxtjs/eslint-config": {
      "optional": true
    },
    "@nuxtjs/eslint-config-typescript": {
      "optional": true
    },
    "eslint-config-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint-plugin-import": "^2.25.4",
    "load-tsconfig": "^0.2.3"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.5.2",
    "@nuxtjs/eslint-config": "^8.0.0",
    "@nuxtjs/eslint-config-typescript": "^8.0.0",
    "eslint": "^8.9.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-react-hooks": "^4.3.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "simple-git-hooks": "^2.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
